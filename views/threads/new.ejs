<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="mt-3 mb-3">
        <h1 class="text-center">New Thread</h1>
    </div>
    <div class="col-md-6 offset-md-3">
        <form action="/threads/new" method="POST">
            <div class="mb-3">
                <label class="form-label" for="subject">What's this Thread about?</label>
                <input class="form-control" type="text" id="subject" name="thread[subject]" placeholder="Who will win in the next episode of 'Ultimate Beastmaster'?" required>
            </div>
            <div class="mb-3">
                <div class="row">
                    <label class="form-label" for="answerText">When should we stop accepting guesses?</label>
                    <div class="col-8">
                        <input class="form-control" type="text" id="answerText" name="thread[answerText]" placeholder="When 'Episode 2' comes out." required>
                    </div>
                    <div class="col-4">
                        <input class="form-control" type="date" id="answerDate" name="thread[answerDate]" value="2021-12-25">
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="threadClaim">What do you think will happen?</label>
                <input class="form-control" type="text" id="threadClaim" name="thread[claim]" placeholder="The Soldier should've won Episode 1; he's gonna win next episode." required>
            </div>
            <div class="d-grid mb-3">
                <button class="btn btn-success">Create Thread</button>
            </div>
        </form>
    </div>
</div>