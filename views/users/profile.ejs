<% layout('layouts/boilerplate')%>

<% if(currentUser){ %>
<h1><%=currentUser.username%></h1>
<p>You have called it
    <%if(currentUser.timesCalledIt){%>
        <%=currentUser.timesCalledIt%>
        <%if(currentUser.timesCalledIt === 1){%>time.<%} else{%>times.<%}%>
    <%} else {%>0 times.<%}%>
</p>
    <div class="card mb-3 col-4 offset-4">
        <div class="row">
            <div class="col-1">
                <a href="/threads/new">
                <svg xmlns="http://www.w3.org/2000/svg" width="39" height="39" fill="black" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                  </svg>
                </a>
            </div>
            <div class="col-11">
                <div class="d-grid gap-2  ms-2">
                    <a class="btn btn-primary" id="newThread" name="newThread" href="/threads/new" role="button">Create New Thread</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- Sidebars -->
            <ins class="adsbygoogle"
                style="display:block"
                data-ad-client="ca-pub-6251134994307106"
                data-ad-slot="3050317868"
                data-ad-format="auto"
                data-full-width-responsive="true"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
        <div class="card mb-3 col-4">
            <div class="row">
                <div class="">
                    <h2 class="text-center">Your Threads:</h2>
                </div>
                <div class="d-grid gap-2">
                    <%if (participatingThreads.length < 1) {%>
                            <h4 class="text-center">You don't have any yet!</h4>
                        <% } %>
                <% for(let thread of participatingThreads) { %>
                        <a class="btn btn-secondary" href="threads/<%=thread._id%>"><%=thread.subject%></a>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="col-4">
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- Sidebars -->
            <ins class="adsbygoogle"
                style="display:block"
                data-ad-client="ca-pub-6251134994307106"
                data-ad-slot="3050317868"
                data-ad-format="auto"
                data-full-width-responsive="true"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </div>


    <%}%>


